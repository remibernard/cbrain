<%
  css_read = "message_" + (mess.read? ? "read" : "unread")
  css_type = "#{mess.message_type}_display"
%>

<tr class="<%= "message_display_#{mess.id} #{css_read} #{css_type}"%>">
  <% if render_for == :index %>
    <td class="wrap">
      <%= check_box_tag("message_ids[]", mess.id.to_s, false, :class => 'messlist') %>
    </td>
  <% end %>
  <td class="wrap left shrinkable" style="white-space:normal">
    &nbsp;
    <%= show_hide_toggle Message.parse_markup( mess.header ), "#message_table_details_#{mess.id}" %>

    <div id="message_table_details_<%= mess.id %>" style="display:none">
      <%= render :partial  => 'messages/message_details', :locals  => {:mess  => mess} %>
    </div>
  </td>
  <td><%= mess.sender.try(:login) || "System" %></td>
  <% unless current_user.has_role?(:normal_user) %>
    <td><%= mess.user.login %></td>
  <% end %>
  <td><%= to_localtime(mess.last_sent, :datetime) %></td>
  <td>
    <% if mess.read %>
      <%=
         delete_button 'Mark&nbsp;as&nbsp;Unread'.html_safe, message_path(mess, :read => "false"),
                 :class => 'action_link',
                 :method  => "PUT",
                 :target  => ".message_display_#{mess.id}",
                 :loading_message  => "<td colspan='4' style='color:red; text-align:center;'>Updating...</td>"
      %>
    <% else %>
      <%=
        delete_button  'Mark&nbsp;as&nbsp;Read'.html_safe,  message_path(mess, :read  => "true"),
                 :class => 'action_link',
                 :method  => "PUT",
                 :target  => ".message_display_#{mess.id}",
                 :loading_message  => "<td colspan='4' style='color:red; text-align:center;'>Updating...</td>"
      %>
    <% end %>
    &nbsp;
    <%=
       delete_button  'Delete',  message_path(mess),
                :class => 'action_link',
                :method  => "DELETE",
                :target  => ".message_display_#{mess.id}",
                :remove_target => ".message_display_#{mess.id}",
                :loading_message  => "<td colspan='4' style='color:red; text-align:center;'>Deleting...</td>"
    %>
  </td>

</tr>

